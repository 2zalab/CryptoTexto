                            android:checked="false"
                            android:fontFamily="sans-serif-condensed"
                            android:text="FairPlay"/>

                    </RadioGroup-->

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clé de décryptage :"
                    android:layout_marginLeft="5dp"
                    android:textSize="16sp"
                    android:textColor="@color/purple_500"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/cle_decryptage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

            <Button
                android:id="@+id/btn_decryptage"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/background_round"
                android:text="Lancer le décryptage "
                android:layout_marginTop="0dp"
                android:textColor="@color/white" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:orientation="vertical">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Le message décrypté est :"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="15dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/output_decryptage"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/bg_border"
                        android:gravity="top"
                        android:padding="5dp"
                        android:scrollbars="vertical" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        >

                        <ImageButton
                            android:id="@+id/btn_copy2"
                            android:layout_width="120dp"
                            android:layout_height="35dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="4"
                            android:background="@drawable/background_round"
                            android:src="@drawable/ic_baseline_file_copy_24"
                            app:tint="@color/white" />

                        <ImageButton
                            android:id="@+id/btn_share2"
                            android:layout_width="120dp"
                            android:layout_height="35dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="4"
                            android:background="@drawable/background_round"
                            android:src="@drawable/ic_baseline_share_24"
                            app:tint="@color/white" />

                        <ImageButton
                            android:id="@+id/btn_exit2"
                            android:layout_width="120dp"
                            android:layout_height="35dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="4"
                            android:background="@drawable/background_round"
                            android:src="@drawable/ic_baseline_cancel_24"
                            app:tint="@color/white" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</ScrollView>