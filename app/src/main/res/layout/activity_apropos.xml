<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AproposActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="false"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/crypto" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/image"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/image"
                android:text="CRYPTO TEXTO"
                android:textColor="@color/purple_500"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/commentaire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView7"
                android:layout_alignLeft="@+id/textView7"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:text="Application des cryptage et de décryptage des messages"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/commentaire"
                android:layout_alignLeft="@+id/commentaire"
                android:text="Version 1.0"
                android:textColor="@color/purple_500"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <TextView
            android:id="@+id/description1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="Description"
            android:background="@color/purple_500"
            android:layout_marginTop="12dp"
            android:textSize="16sp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/description2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_margin="12dp"
            android:textColor="@color/black"
            android:text="@string/description"/>


        <TextView
            android:id="@+id/auteur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coordonnées du developpeur"
            android:layout_marginLeft="12dp"
            android:textSize="16sp"
            android:background="@color/purple_500"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_auteur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_baseline_account_circle_24"
                app:tint="@color/purple_500" />

            <TextView
                android:id="@+id/nom_auteur"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/image_auteur"
                android:layout_alignTop="@+id/image_auteur"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:text="Touza Isaac"/>

            <ImageView
                android:id="@+id/image_localisation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nom_auteur"
                android:layout_marginTop="27dp"
                android:layout_alignTop="@id/image_auteur"
                android:layout_marginLeft="12dp"
                android:src="@drawable/ic_baseline_location_on_24"
                app:tint="@color/purple_500" />

            <TextView
                android:id="@+id/text_localisation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/image_localisation"
                android:layout_alignTop="@+id/image_localisation"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:text="Maroua, Cameroun"/>

            <ImageView
                android:id="@+id/image_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nom_auteur"
                android:layout_marginTop="27dp"
                android:layout_alignTop="@id/image_localisation"
                android:layout_marginLeft="12dp"
                android:src="@drawable/ic_baseline_phone_24"
                app:tint="@color/purple_500" />

            <TextView
                android:id="@+id/numero_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/image_phone"
                android:layout_alignTop="@+id/image_phone"
                android:textColor="@color/black"
                android:autoLink="phone"
                android:textColorLink="@color/purple_500"
                android:textSize="16dp"
                android:text="+237 691 805 321 / +237 672 277 579"/>

            <ImageView
                android:id="@+id/image_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nom_auteur"
                android:layout_marginTop="27dp"
                android:layout_alignTop="@id/image_phone"
                android:layout_marginLeft="12dp"
                android:src="@drawable/ic_baseline_email_24"
                app:tint="@color/purple_500" />

            <TextView
                android:id="@+id/mail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/image_mail"
                android:layout_alignTop="@+id/image_mail"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textColorLink="@color/purple_500"
                android:autoLink="email"
                android:text="isaac_touza@outlook.fr"/>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>